{
  "name": "buzzmaster",
  "version": "1.1.4",
  "description": "A buzzer application for quiz shows",
  "productName": "BuzzMaster",
  "author": "marvin-wtt <31454580+marvin-wtt@users.noreply.github.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/marvin-wtt/BuzzMaster"
  },
  "keywords": [
    "playstation",
    "buzz",
    "buzzer",
    "quiz"
  ],
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "quasar prepare",
    "lint": "eslint -c ./eslint.config.js \"./src*/**/*.{ts,js,cjs,mjs,vue}\"",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "echo \"See package.json => scripts for available tests.\" && exit 0",
    "dev": "quasar dev -m electron",
    "build": "quasar build -m electron",
    "test:unit:ui": "vitest --ui",
    "test:unit": "vitest",
    "test:unit:ci": "vitest run"
  },
  "dependencies": {
    "@quasar/extras": "^1.16.17",
    "electron-log": "^5.1.5",
    "electron-updater": "^6.3.0",
    "events": "^3.3.0",
    "pinia": "^3.0.2",
    "quasar": "^2.18.1",
    "vue": "^3.5.13",
    "vue-i18n": "^11.1.3",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@intlify/unplugin-vue-i18n": "^6.0.8",
    "@pinia/testing": "^1.0.1",
    "@quasar/app-vite": "^2.2.0",
    "@quasar/cli": "^2.5.0",
    "@quasar/quasar-app-extension-testing-unit-vitest": "^1.1.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.14.1",
    "@types/w3c-web-hid": "^1.0.6",
    "@vitest/ui": "^3.1.2",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.1",
    "eslint-plugin-vue": "^10.0.0",
    "globals": "^16.0.0",
    "lodash-es": "^4.17.21",
    "prettier": "^3.5.3",
    "typed-emitter": "^2.1.0",
    "typescript": "^5.8.3",
    "vite-plugin-checker": "^0.9.1",
    "vitest": "^3.1.2",
    "vue-tsc": "^2.2.8"
  },
  "overrides": {
    "@quasar/quasar-app-extension-testing-unit-vitest": {
      "vitest": "^3.0.0",
      "@vitest/ui": "^3.0.0"
    }
  },
  "engines": {
    "node": "^22 || ^20",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
